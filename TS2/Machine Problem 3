<body>
    <div class="container">
        <div class="buttons">
            <button style="background-color: purple;" onclick="dropBox('Monday', this)">Monday</button>
            <button style="background-color: pink;" onclick="dropBox('Tuesday', this)">Tuesday</button>
            <button style="background-color: blue; color: white;" onclick="dropBox('Wednesday', this)">Wednesday</button>
            <button style="background-color: green;" onclick="dropBox('Thursday', this)">Thursday</button>
            <button style="background-color: yellow;" onclick="dropBox('Friday', this)">Friday</button>
            <button style="background-color: orange;" onclick="dropBox('Saturday', this)">Saturday</button>
            <button style="background-color: red; color: white;" onclick="dropBox('Sunday', this)">Sunday</button>
        </div>
        <div class="box-container" id="boxContainer"></div>
    </div>
    <script>
        function dropBox(day, button) {
            const boxContainer = document.getElementById("boxContainer");
            const oldBox = boxContainer.querySelector(".box");
            
            if (oldBox) {
                oldBox.classList.add("hollow"); // Make old box lose fill
                setTimeout(() => {
                    oldBox.style.transform = "translateY(-100%)"; // Slide old box up
                    oldBox.style.opacity = "0";
                }, 300);
                setTimeout(() => oldBox.remove(), 800); // Remove after animation
            }
            
            const newBox = document.createElement("div");
            newBox.classList.add("box");
            newBox.style.backgroundColor = getComputedStyle(button).backgroundColor;
            newBox.style.borderColor = getComputedStyle(button).backgroundColor;
            newBox.innerText = day;
            boxContainer.appendChild(newBox);
            
            setTimeout(() => {
                newBox.style.opacity = "1";
                newBox.style.transform = "translateY(0)";
            }, 10);
        }
    </script>
</body>
</html>
